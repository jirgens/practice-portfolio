<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :title => "Daymaker Digital", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :title => "Daymaker Digital", sticky: false) %>
<% else flash[:notice] %>
  <%= js add_gritter(flash[:notice], :title => "Daymaker Digital", sticky: false) %>   
<% end %>
